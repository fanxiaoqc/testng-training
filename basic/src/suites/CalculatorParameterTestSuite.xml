<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Calculator Test Suite">
	<!-- Parameter Usage -->
	
	<parameter name="a" value="100" />
	<parameter name="b" value="100" />
	<parameter name="c" value="300" />
	
	<test verbose="2" name="Calculator Test P1 - Run test method with parameter defined in suite level">
		<classes>
			<class name="org.testng.training.CalculatorTestNgTest">
				<methods>
					<include name="testWithParameters" />
				</methods>
			</class>
		</classes>
	</test>
	
	<test verbose="2" name="Calculator Test P2 - Run test method with parameter defined in test level">
		<parameter name="a" value="101" />
		<parameter name="b" value="101" />

		<classes>
			<class name="org.testng.training.CalculatorTestNgTest">
				<methods>
					<include name="testWithParameters" />
				</methods>
			</class>
		</classes>
	</test>
	
	<test verbose="2" name="Calculator Test P3 - Run test method with parameter defined in test level and optional">
		<parameter name="c" value="302" />

		<classes>
			<class name="org.testng.training.CalculatorTestNgTest">
				<methods>
					<include name="testWithParametersAndOptional" />
				</methods>
			</class>
		</classes>
	</test>

	<test verbose="2" name="Calculator Test P4 - Run test method with parameter defined in data provider">
		<classes>
			<class name="org.testng.training.CalculatorTestNgTest">
				<methods>
					<include name="testWithDataProvider" />
					<include name="testWithStaticDataProvider" />
				</methods>
			</class>
		</classes>
	</test>
</suite>  